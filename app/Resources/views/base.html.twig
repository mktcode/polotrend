<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
        <title>{% block title %}Polotrend - See when people start to buy or sell on Poloniex!{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ asset('assets/img/favicon.png') }}"/>
        <link rel="apple-touch-icon" href="{{ asset('assets/img/push-icon.png') }}"/>
        {% block stylesheets %}
            {% stylesheets
            'assets/vendor/uikit/dist/css/uikit.min.css'
            'assets/vendor/font-awesome/css/font-awesome.min.css'
            'assets/css/index.css'
            filter='cssrewrite' %}
            <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}
        {% if hotjar %}
        <script>
            (function(h,o,t,j,a,r){
                h.hj=h.hj||function(){(h.hj.q=h.hj.q||[]).push(arguments)};
                h._hjSettings={hjid:513067,hjsv:5};
                a=o.getElementsByTagName('head')[0];
                r=o.createElement('script');r.async=1;
                r.src=t+h._hjSettings.hjid+j+h._hjSettings.hjsv;
                a.appendChild(r);
            })(window,document,'//static.hotjar.com/c/hotjar-','.js?sv=');
        </script>
        {% endif %}
    </head>
    <body>
        {% block body %}
            <div class="uk-container uk-container-small uk-container-center uk-margin-top">
                {% block content %}{% endblock %}
            </div>
        {% endblock %}
        {% block javascripts %}
            {% javascripts
            'assets/vendor/jquery/dist/jquery.min.js'
            'assets/vendor/uikit/dist/js/uikit.min.js'
            'assets/vendor/uikit/dist/js/uikit-icons.min.js'
            'assets/vendor/autobahn/autobahn.min.js'
            'assets/vendor/push.js/push.min.js'
            'assets/vendor/moment/min/moment-with-locales.min.js'
            'assets/vendor/moment-timezone/builds/moment-timezone-with-data.min.js'
            'assets/vendor/ion-sound/js/ion.sound.min.js'
            'assets/js/index.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}
    </body>
</html>
